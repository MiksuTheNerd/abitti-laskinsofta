{
  "name": "rich-text-editor",
  "version": "7.3.0",
  "description": "Rich text editor",
  "homepage": "https://github.com/digabi/rich-text-editor",
  "source": "src/react/index.tsx",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*",
    "server/*"
  ],
  "scripts": {
    "generateMathButtons": "scripts/createMathSvg.js && prettier --write src/latexCommandsWithSvg.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test:ct": "playwright test -c playwright-ct.config.ts --project=chromium",
    "test": "npm run typecheck && npm run lint && npm run test:ct",
    "build": "rm -rf dist/ && parcel build",
    "watch": "parcel serve index.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digabi/rich-text-editor.git"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/polyfill": "^7.0.0",
    "@digabi/eslint-config": "^3.0.0",
    "@parcel/core": "^2.12.0",
    "@parcel/packager-ts": "^2.12.0",
    "@parcel/transformer-babel": "^2.12.0",
    "@parcel/transformer-typescript-tsc": "^2.12.0",
    "@parcel/transformer-typescript-types": "^2.12.0",
    "@playwright/experimental-ct-react": "^1.46.1",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "blueimp-mocha-chrome": "2.3.0",
    "buffer": "^6.0.3",
    "chai": "^4.2.0",
    "chai-jquery": "^2.1.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "express": "^4.16.4",
    "mocha": "^10.0.0",
    "morgan": "^1.9.1",
    "parcel": "^2.12.0",
    "prettier": "^3.0.0",
    "process": "^0.11.10",
    "sanitize-html": "^2.0.0",
    "supervisor": "^0.12.0",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "tslib": "^2.0.1",
    "typescript": "^5.0.2",
    "web-console-reporter": "^1.0.0"
  },
  "dependencies": {
    "@digabi/mathquill": "^0.10.12",
    "@playwright/test": "^1.46.1",
    "@types/express": "*",
    "@types/jquery": "^3.5.30",
    "@types/sanitize-html": "^2.11.0",
    "jquery": "3.x",
    "mathjax": "^3.2.2",
    "mathjax-full": "^3.2.2",
    "mathjax-node": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "styled-components": "^6.1.12"
  },
  "peerDependencies": {
    "jquery": "3.x",
    "sanitize-html": "^2.0.0"
  }
