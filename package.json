{
  "name": "rich-text-editor",
  "version": "7.3.0",
  "description": "Rich text editor",
  "homepage": "https://github.com/digabi/rich-text-editor",
  "source": "src/react/index.tsx",
  "browser": "dist/bundle.js",
  "targets": {
    "browser": {
      "includeNodeModules": true,
      "optimize": true
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist/*",
    "server/*"
  ],
  "scripts": {
    "generateMathButtons": "scripts/createMathSvg.js && prettier --write src/latexCommandsWithSvg.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test:ct": "playwright test -c playwright-ct.config.ts --project=chromium",
    "test": "npm run typecheck && npm run lint && npm run test:ct",
    "build": "rm -rf dist/ .parcel-cache && parcel build --no-source-maps --detailed-report",
    "dev": "parcel serve index.html",
    "dev-server": "ts-node dev-server.ts",
    "watch": "concurrently -n='PARCEL,DEVSERVER' -c=auto 'npm run dev' 'npm run dev-server'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digabi/rich-text-editor.git"
  },
  "devDependencies": {
    "@digabi/eslint-config": "^3.2.0",
    "@parcel/core": "^2.12.0",
    "@parcel/packager-ts": "^2.12.0",
    "@parcel/transformer-babel": "^2.12.0",
    "@parcel/transformer-typescript-tsc": "^2.12.0",
    "@parcel/transformer-typescript-types": "^2.12.0",
    "@playwright/experimental-ct-react": "^1.47.2",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.6.0",
    "express": "^4.21.0",
    "parcel": "^2.12.0",
    "prettier": "^3.3.3",
    "process": "^0.11.10",
    "sanitize-html": "^2.13.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@digabi/mathquill": "^0.10.12",
    "@playwright/test": "^1.47.2",
    "@types/express": "^4.17.21",
    "@types/jquery": "^3.5.31",
    "@types/sanitize-html": "^2.13.0",
    "jquery": "^3.7.1",
    "mathjax-node": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "styled-components": "^6.1.13"
  },
  "peerDependencies": {
    "jquery": "^3.7.1",
    "sanitize-html": "^2.0.0"
  }
}
